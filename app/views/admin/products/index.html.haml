%h1= t Product.model_name.human(count: 2)
%table.table.table-hover
  %thead
    %tr
      %th= Product.human_attribute_name(:category)
      %th= Product.human_attribute_name(:name)
      %th= Product.human_attribute_name(:title)
      %th= Category.human_attribute_name(:cover_image)
      %th= Product.human_attribute_name(:code)
      -# %th= Product.human_attribute_name(:unit)
      -# %th= Product.human_attribute_name(:vendor_code)
      -# %th= Product.human_attribute_name(:vendor_price)
      %th= Product.human_attribute_name(:price)
      %th= Product.human_attribute_name(:hot)
      %th= Product.human_attribute_name(:hot_price)
      %th= Product.human_attribute_name(:quantity)
      -# %th= Product.human_attribute_name(:abstract)
      -# %th= Product.human_attribute_name(:position)
      %th= Product.human_attribute_name(:url)
      %th= Product.human_attribute_name(:seo_title)
      -# %th= Product.human_attribute_name(:seo_description)
      -# %th= Product.human_attribute_name(:seo_keywords)
      %th= t 'status.status'
      %th= t 'actions.actions'

  %tbody
    - @products.each do |product|
      %tr
        %td= product.category.title
        %td= product.name
        %td= product.title
        %td= image_tag product.cover_image.variant(resize_to_limit: [50, 50]) if product.cover_image.attached?
        %td= product.code
        -# %td= product.unit
        -# %td= product.vendor_code
        -# %td= product.vendor_price
        %td= number_to_currency product.price
        %td= product.hot
        %td= number_to_currency product.hot_price
        %td= product.quantity
        -# %td= product.abstract
        -# %td= product.position
        %td= product.url
        %td= product.seo_title
        %td= status_mark product.status
        -# %td= product.seo_description
        -# %td= product.seo_keywords
        %td= render 'admin/shared/index_buttons', resource: product
%br
.row
  .col-md-2
    = link_to t('actions.create'), new_admin_product_path, class: 'btn btn-primary btn-sm'
