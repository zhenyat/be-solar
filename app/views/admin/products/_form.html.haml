.container
  .row
    .col-ms-6
      = simple_form_for([:admin, @product], html: {multipart: true}) do |f|
        = f.error_notification message: t('messages.error_notification')

        .form-inputs
          = f.association :category, collection: Category.all.map {|category| [category.title, category.id]}, include_blank: false
          = f.input :name, :hint => 'In English only'
          = f.input :title
          = f.input :code
          = f.input :unit, include_blank: false
          = f.input :vendor_code
          = f.input :vendor_price
          = f.input :price
          = f.input :hot
          = f.input :hot_price
          = f.input :quantity
          = f.input :abstract
          = f.input :position, as: :hidden

          = f.input :status, default: 0
          /= render 'admin/shared/status_buttons', f: f
          = f.input :url
          = f.input :seo_title
          = f.input :seo_description
          = f.input :seo_keywords

          = render 'admin/shared/form_rich_text_content', f: f, object: @product
          = render 'admin/shared/form_images', f: f, object: @product
          = render 'admin/shared/form_actions', f: f, object: @product
